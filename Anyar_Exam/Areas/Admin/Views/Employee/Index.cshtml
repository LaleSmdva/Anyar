@using Core.Entities
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Employee Table</h4>
            <form method="post">

                <div class="table-responsive">
                    <a asp-action="Create">Create new employee</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Position
                                </th>
                                <th>
                                    Desciption
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {

                                <tr>
                                    <td class="py-1">
                                        <img src="~/admin/assets/images/faces/@employee.Image" alt="image" />
                                    </td>
                                    <td>
                                        @employee.Name
                                    </td>
                                    <td>
                                        @employee.Position
                                    </td>
                                    <td>
                                        @employee.Description
                                    </td>
                                    <td>
                                        <button class="btn btn-primary" asp-action="Detail" asp-route-id="@employee.Id">Details</button>
                                        <button class="btn btn-primary" asp-action="Update" asp-route-id="@employee.Id">Update</button>
                                        <button class="btn btn-primary" asp-action="Delete" asp-route-id="@employee.Id">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </form>
           
           
        </div>
    </div>
</div>

